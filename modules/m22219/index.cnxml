            <colspec colnum="4" colname="c4"/>
            <colspec colnum="5" colname="c5"/>
            <tbody>
              <row>
                <entry>Rectangle</entry>
                <entry>Length</entry>
                <entry>Breadth</entry>
                <entry>Perimeter</entry>
                <entry>Area</entry>
              </row>
              <row>
                <entry>1</entry>
                <entry>__________</entry>
                <entry>__________</entry>
                <entry>__________</entry>
                <entry>__________</entry>
              </row>
              <row>
